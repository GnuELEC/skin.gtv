<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <!-- Debug Background -->
    <include name="DebugBackground">
        <definition>
            <control type="image">
                <top>0</top>
                <left>0</left>
                <width>3840</width>
                <height>2160</height>
                <texture background="true" colordiffuse="ffffffff">general/screens/infocast.png</texture>
            </control>
        </definition>
    </include>

    <!-- Main Blurred Background -->
    <include name="BlurredBackground">
        <definition>
            <control type="group">
                <left>0</left>
                <top>0</top>
                <width>3840</width>
                <height>2160</height>
                <control type="image">
                    <fadetime>400</fadetime>
                    <texture background="true">general/Black.png</texture>
                </control>
                <control type="image">
                    <fadetime>400</fadetime>
                    <aspectratio>scale</aspectratio>
                    <texture background="true" colordiffuse="ff404040">$INFO[Window(home).Property(listitem_blurred)]</texture>
                </control>
            </control>
        </definition>
    </include>

</includes>